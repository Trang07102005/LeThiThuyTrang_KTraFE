@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/131e0ec2d1.js" crossorigin="anonymous"></script>
</head>
<body>
    <style>
        header {
            padding: 20px;
            box-shadow: 1px 2px 3px 0px black;
            margin: 10px 0;
        }

        .logo img {
            height: 60px;
        }

        .header__box {
            position: relative;
        }

        .seach-box {
            position: relative;
            height: 40px;
            display: flex;
            align-items: center;
            border: 2px solid #ccc;
            border-radius: 20px;
            background-color: white;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            padding: 0 15px;
            width: 100%;
            max-width: 600px;
        }

            .seach-box input {
                border: none;
                outline: none;
                flex-grow: 1;
                padding: 0 10px;
                font-size: 16px;
                color: #333;
                background-color: transparent;
            }

        #search_icon {
            color: #555;
            font-size: 18px;
        }

        #search-box-title {
            font-size: 16px;
            font-weight: bold;
            color: #007bff;
            margin-left: 10px;
            text-decoration: none;
            cursor: pointer;
        }

            #search-box-title:hover {
                color: #0056b3;
            }

        /* HEADER ICON */

        .house-icon, .astra-icon, .taikhoan-icon, .shopping-cart {
            padding: 0 10px;
        }

            .house-icon a, .astra-icon a, .taikhoan-icon a, .shopping-cart a {
                padding: 0 2px;
                color: black;
            }

        /* NAVBAR */
        nav a {
            color: black;
            text-decoration: none;
            padding: 0 2px;
        }

        /* SECTION */

        main {
            background: rgb(245, 245, 250);
            min-height: 100vh;
        }

        .section-left {
            flex: 1.4;
        }

        .section-right {
            flex: 0.6;
        }

        .section-left__slide__box {
            background: white;
            width: 100%;
            height: 60px;
        }

        .section-left__slide {
            height: 10px;
            width: 100%;
            background: lightgreen;
            border-radius: 30px;
        }

        /* SECTION LEFT NAV */

        .section-left__nav {
            background: white;
            margin: 10px 0;
        }

        .section-left__nav__items-boxes {
            display: flex;
            justify-content: space-between;
            width: 460px;
        }

        /* SECTION LEFT BOX-1 */


        .section-left__box1 {
            margin: 20px 0;
        }

        .section-left__box1, .section-left__box2 {
            background: white;
            height: 260px;
        }


        .section-left__box1__sanpham__img img, .section-left__box2__sanpham__img img {
            width: 200px;
        }

        /* SECTION RIGHT */


        .section-right {
            margin: 0 10px;
            height: 500px;
        }

        .section-right__thanhtoan__img {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100px;
        }

            .section-right__thanhtoan__img img {
                width: 200px;
            }

        /* SECTION RIGHt KHUYEN MAI */

        .section-right__khuyenmai {
            height: 200px;
            background: white;
            padding: 10px;
        }

        .section-right__khuyenmai_khuyenmaititle {
            margin: 10px 0;
            position: relative;
            z-index: 10;
        }

            .section-right__khuyenmai_khuyenmaititle a {
                color: black;
            }

            .section-right__khuyenmai_khuyenmaititle i {
                margin-top: 6px;
                margin-right: 10px;
            }

        /* THANH TOAN */


        .section-right__thanhtoan {
            background: white;
            margin: 10px 0;
            padding: 10px;
        }

        .section-right__thanhtoan__tinhtong p {
            margin: 0 4px;
        }

        /* BUTTON */

        .section-right__button {
            background: red;
            height: 70px;
        }

            .section-right__button a {
                color: white;
                text-decoration: none;
            }
        .badge {
            font-size: 12px;
            width: 18px;
            height: 18px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            color: white;
        }
        .progress-container {
            width: 100%; /* Độ rộng toàn bộ container */
            height: 20px; /* Chiều cao của thanh */
            background-color: #e0e0e0; /* Màu nền nhạt */
            border-radius: 10px; /* Bo tròn các góc */
            overflow: hidden;
            margin-top: 20px;
            position: relative;
        }

        #progress-bar {
            height: 100%; /* Chiều cao khớp với container */
            background-color: #4caf50; /* Màu xanh của thanh tiến trình */
            width: 0%; /* Mặc định khởi đầu là 0% */
            transition: width 0.3s ease-in-out; /* Hiệu ứng mượt khi thay đổi độ rộng */
            position: relative;
        }

        #progress-text {
            position: absolute;
            right: 10px; /* Đặt vị trí giá trị */
            top: 50%;
            transform: translateY(-50%);
            color: white;
            font-size: 14px;
            font-weight: bold;
        }


    </style>
