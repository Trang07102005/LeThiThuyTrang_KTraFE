</body>
</html>

<script language="javascript">
    // BUTTON

    // Cập nhật số lượng sản phẩm 1
    function PlusBtn1() {
        const number = document.querySelector('.numberbox1');
        let count = parseInt(number.textContent);
        count++;
        number.textContent = count;

        const priceElement = document.querySelector('.section-left__box1__sanpham__dongia span');
        const totalPriceElement = document.querySelector('.section-left__box1__sanpham__thanhtien span');
        const price = parseFloat(priceElement.textContent.replace(/[^\d]/g, ''));
        const totalPrice = count * price;
        totalPriceElement.textContent = totalPrice.toLocaleString('vi-VN') + ' đ';

        updateTotalPrice();
    }

    function MinusBtn1() {
        const number = document.querySelector('.numberbox1');
        let count = parseInt(number.textContent);
        if (count > 1) {
            count--;
            number.textContent = count;

            const priceElement = document.querySelector('.section-left__box1__sanpham__dongia span');
            const totalPriceElement = document.querySelector('.section-left__box1__sanpham__thanhtien span');
            const price = parseFloat(priceElement.textContent.replace(/[^\d]/g, ''));
            const totalPrice = count * price;
            totalPriceElement.textContent = totalPrice.toLocaleString('vi-VN') + ' đ';

            updateTotalPrice();
        }
    }

    // Cập nhật số lượng sản phẩm 2
    function PlusBtn2() {
        const number = document.querySelector('.numberbox2');
        let count = parseInt(number.textContent);
        count++;
        number.textContent = count;

        const priceElement = document.querySelector('#dongia_box2');
        const totalPriceElement = document.querySelector('.thanhtien_box2');
        const price = parseFloat(priceElement.textContent.replace(/[^\d]/g, ''));
        const totalPrice = count * price;
        totalPriceElement.textContent = totalPrice.toLocaleString('vi-VN') + ' đ';

        updateTotalPrice();
    }

    function MinusBtn2() {
        const number = document.querySelector('.numberbox2');
        let count = parseInt(number.textContent);
        if (count > 1) {
            count--;
            number.textContent = count;

            const priceElement = document.querySelector('#dongia_box2');
            const totalPriceElement = document.querySelector('.thanhtien_box2');
            const price = parseFloat(priceElement.textContent.replace(/[^\d]/g, ''));
            const totalPrice = count * price;
            totalPriceElement.textContent = totalPrice.toLocaleString('vi-VN') + ' đ';

            updateTotalPrice();
        }
    }

    // Cập nhật tổng tiền và thanh tiến trình
    function updateTotalPrice() {
        let totalPrice = 0;
        let selectedCount = 0;

        // Duyệt qua các sản phẩm
        const items = document.querySelectorAll('.selection');
        items.forEach((item, index) => {
            if (item.checked) {
                selectedCount++;
                const quantity = parseInt(document.querySelectorAll('.numberbox1, .numberbox2')[index].textContent);
                const price = parseFloat(document.querySelectorAll('.section-left__box1__sanpham__dongia span, #dongia_box2')[index].textContent.replace(/[^\d]/g, ''));
                totalPrice += quantity * price;
            }
        });

        // Cập nhật tạm tính và tổng tiền
        document.querySelector('#tamtinh').textContent = totalPrice.toLocaleString('vi-VN') + ' đ';
        document.querySelector('.section-right__thanhtoan__tinhtong p:nth-child(2)').textContent = totalPrice.toLocaleString('vi-VN') + ' đ';

        // Cập nhật số lượng sản phẩm trên giỏ hàng
        document.getElementById('cart-count').textContent = selectedCount;

        // Cập nhật thanh tiến trình
        updateProgressBar(totalPrice);
    }

    // Hàm cập nhật thanh tiến trình
    function updateProgressBar(totalPrice) {
        const maxPrice = 20000000; // Giá trị tối đa (20 triệu đồng)
        const progressBar = document.getElementById('progress-bar');
        const progressText = document.getElementById('progress-text');

        let progress = (totalPrice / maxPrice) * 100;
        if (progress > 100) {
            progress = 100; // Giới hạn tiến trình không vượt quá 100%
        }

        progressBar.style.width = progress + '%';
        progressText.textContent = totalPrice.toLocaleString('vi-VN') + ' đ';
    }

    // Checkbox chọn tất cả sản phẩm
    const selectionAll = document.getElementById('selectionall');
    const selections = document.querySelectorAll('.selection');
    selectionAll.addEventListener('change', function () {
        selections.forEach(selection => {
            selection.checked = selectionAll.checked;
        });
        updateTotalPrice();
    });

    // Xử lý khi người dùng chọn từng sản phẩm
    selections.forEach(selection => {
        selection.addEventListener('change', updateTotalPrice);
    });

</script>

